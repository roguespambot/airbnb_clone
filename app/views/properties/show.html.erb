<%= content_for(:header) do %>
  <%= @property.title %>
<% end %>
<div class="row property_display">
  <p><%= @property.bedrooms %> bedrooms</p>
  <p><%= number_to_currency(@property.price) %></p>
  <p><%= @property.description %></p>
  <p>
      <% if @property.image_file_name %>
        <%= image_tag @property.image.url(:medium) %>
      <% end %>
    </p>
</div>
<div class= "row" id="i-want-it">
  <% if @property.rented %>
    <p>This property has been rented.</p>
  <% elsif user_signed_in? %>
    <%= link_to "I want it!", new_property_rental_path(@property), remote: true, :class => "btn btn-fire" %>
  <% else %>
    <p>Property available, <%= link_to "sign in", new_user_session_path %> to reserve!</p>
  <% end %>
</div>
<div class= "row" id="i-got-it">
</div>
