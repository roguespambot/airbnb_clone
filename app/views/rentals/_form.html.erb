<div class="rental-form">

  <% if @rental.errors.any? %>
    <% @rental.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_for [@property, @rental], remote: true do |f| %>
    <div class="form-group">
      <%= f.hidden_field :renter_id, value: current_user.id %>
      <%= f.hidden_field :property_id, value: @property.id %>
      <%= f.hidden_field :price_paid, value: @property.price %>

      <%= f.label :start_date %>
      <%= f.date_field :start_date, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, :class => "form-control" %>
    </div>

    <%= f.submit "Reserve it!", :class => "btn btn-fire" %>
  <% end %>
</div>

